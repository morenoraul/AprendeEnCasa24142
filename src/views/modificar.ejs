<%- include('partials/head') %>
	<body>
		<h2>Curso a Modificar</h2>
		<article>
			<h4>Curso</h4>
			<h4>Precio</h4>
			<h4>Cantidad Horas</h4>
		</article>
		<% if (registro) { %>
			<form method="POST" action="/modificar?_metodo=PATCH" style="display:flex">
					<input type="text" name="codcurso" value="<%= registro.codcurso %>">
					<input type="number" name="precio" value="<%= registro.precio %>">
					<input type="number" name="cantidadhoras" value="<%= registro.cantidadhoras %>">
					<input type="hidden" name="idActualizar" value="<%= registro.nromov %>">
					<input type="submit" value="Actualizar">
			</form>
		<% } else { %>
			<p>No se encontr√≥ el registro para modificar.</p>
		<% } %>
